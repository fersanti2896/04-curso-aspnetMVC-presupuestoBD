@model IEnumerable<TipoCuentaModel>

@{
    ViewData["Title"] = "Tipos Cuentas";
}

<h1>Tipos de Cuentas</h1>
<h5>El tipo de cuenta se referie a cómo podemo agrupar cuentas. 
    Ejemplo: Préstamos, Tarjetas de Crédito, Tarjetas de Débito, Vales, etc.
</h5>

<a asp-action="Crear" class="btn btn-success mb-3">Crear Tipo Cuenta</a>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tipoCuenta in Model) {
            <tr>
                <td>
                    @tipoCuenta.Nombre
                </td>
                <td>
                    <a class="btn btn-warning" asp-action="Editar" asp-route-id="@tipoCuenta.Id">Editar</a>
                    <a class="btn btn-danger" asp-action="Borrar" asp-route-id="@tipoCuenta.Id">Borrar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
